<div class="block">
  <div class="content">
    <div class="inner">     
        <p>
          <b><%= t("activerecord.attributes.team.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @team.name %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("/assets/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_team_path(@team), :class => "button" %> 
        <%= link_to image_tag("/assets/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), team_path(@team), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>
<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "Retros", "#"  %></li>
      <li><%= link_to "Members", team_members_path(:team_id => @team.id) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title">Add Retro</h2>
    <div class="inner">
      <%= form_for :retro, :url => retros_path(:team_id => @team.id), :html => { :class => :form } do |f| -%>
        <div class="group">
          <%= f.label :title, :class => :label %>
          <%= f.text_field :title, :class => 'text_field' %>
          <span class="description">Ex: Some text</span>
        </div>
        <div class="group navform wat-cf">
          <button class="button" type="submit">
             <%= image_tag("/assets/tick.png") %> <%= t("web-app-theme.save", :default => "Save") %>
          </button>
          <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
        	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), teams_path, :class => "text_button_padding link_button" %>
        </div>
      <% end -%>      
    </div>   
  </div>
  <div class="content">
    <h2 class="title">Retros</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th>Title</th>          
          <th class="last">&nbsp;</th>
        </tr>
        <% @retros.each do |retro| %>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= retro.title %></td>          
          <td class="last">
            <%= link_to "Add notes", edit_retro_path(:id => retro.id, :team_id => @team.id) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", retro_path(:id =>  retro.id, :team_id => @team.id), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>      
    </div>   
  </div>     
</div>


<% content_for :sidebar, render(:partial => 'sidebar') -%>