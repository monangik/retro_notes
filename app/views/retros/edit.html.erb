<div class="block">
  <div class="content">
    <div class="inner">     
        <p>
          <b><%= t("activerecord.attributes.team.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @team.name %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("/assets/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_team_path(@team), :class => "button" %> 
        <%= link_to image_tag("/assets/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), team_path(@team), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>
<div class="block">
  <div class="secondary-navigation">
    <%= params[:message] if params[:message] %>
    <ul class="wat-cf">
      <li class="first"><%= link_to "Retros", team_path(:id => @team.id)  %></li>
      <li class="active"><%= link_to "Members", team_members_path(:team_id => @team.id) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title">Add Note</h2>
    <div class="inner">      
      <%= form_for :team_member, :url => team_members_path(:team_id => @team.id), :html => { :class => :form } do |f| -%>
        <div class="group">
          <%= f.label :email, :class => :label %>
          <%= f.text_field :email, :class => 'text_field' %>
          <span class="description">Ex: abc@example.com</span>
        </div>
        <div class="group navform wat-cf">
          <button class="button" type="submit">
             <%= image_tag("/assets/tick.png") %> <%= t("web-app-theme.save", :default => "Save") %>
          </button>
          <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
        	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), teams_path, :class => "text_button_padding link_button" %>
        </div>
      <% end -%>
    </div>
    <h2 class="title">Success</h2>
    <div class="inner">      
      <table class="table">
        <tr>             
          <th><%= t("activerecord.attributes.team.name", :default => t("activerecord.labels.name", :default => "Name")) %></th>
          <th><%= t("activerecord.attributes.team.email", :default => t("activerecord.labels.name", :default => "Email")) %></th>          
          <th class="last">&nbsp;</th>
        </tr>
        <% @team_members.each do |member| %>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= member.name %></td>
          <td><%= member.email %></td>          
          <td class="last">
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", team_member_path(:id => member.id, :team_id => @team.id), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
    </div>
    <h2 class="title">Requested Members</h2>
    <div class="inner">       
      <table class="table">
        <tr>             
          <th><%= t("activerecord.attributes.team.email", :default => t("activerecord.labels.name", :default => "Email")) %></th>          
          <th class="last">&nbsp;</th>
        </tr>
        <% @requested_members.each do |requested_member| %>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= requested_member.email %></td>          
          <td class="last">
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", team_member_path(:id =>  requested_member.id, :team_id => @team.id), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>      
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>        
      </div>
    </div>
  </div>
</div>


